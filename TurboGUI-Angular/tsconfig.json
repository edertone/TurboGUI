{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./target/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "turbogui-angular": [
        "target/turbogui-angular"
      ],
      "turbogui-angular/*": [
        "target/turbogui-angular/*"
      ]
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "plugins": [
      { "name": "@angular/language-service"},
      { "name": "tslint-language-service"}
    ]
  }
}